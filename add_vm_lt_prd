resource "azurerm_network_interface" "prd_ltwebpudinter02" { 
     name = "prd_ltwebpudinter02" 
     location = "West US" 
     resource_group_name = "${azurerm_resource_group.prd.name}" 
     network_security_group_id = "${azurerm_network_security_group.prd_ltwebNSG.id}" 
 
     ip_configuration { 
         name = "prd_ltconfiguration2" 
         subnet_id = "${azurerm_subnet.prd_public.id}" 
         private_ip_address_allocation = "dynamic" 
         public_ip_address_id = "${azurerm_public_ip.prd_ltweb01pub.id}" 
     } 
} 

resource "azurerm_virtual_machine" "prd_weblt02" {
    name = "prd_weblt02"
    location = "West US"
    resource_group_name = "${azurerm_resource_group.prd.name}"
    network_interface_ids = ["${azurerm_network_interface.prd_ltwebpudinter02.id}"]
    vm_size = "Standard_A0"

    storage_image_reference {
        publisher = "MicrosoftWindowsServer"
        offer = "WindowsServer"
        sku = "2008-R2-SP1"
        version = "latest"
    }

    storage_os_disk {
        name = "myosdisk2"
        vhd_uri = "${azurerm_storage_account.prd_swebacnt.primary_blob_endpoint}${azurerm_storage_container.prd_swebcont.name}/myosdisk2.vhd"
        caching = "ReadWrite"
        create_option = "FromImage"
    }

    os_profile {
        computer_name = "weblt01"
        admin_username = "zenadmin"
        admin_password = "Redhat#12345"
    }

    os_profile_windows_config {
        provision_vm_agent = true
        enable_automatic_upgrades = false
    }
}
